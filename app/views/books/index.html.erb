<p id="notice"><%= notice %></p>

<h1><%= t('headline.books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('label.title') %></th>
      <th><%= t('label.memo') %></th>
      <th><%= t('label.author') %></th>
      <th><%= t('label.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('button.show'), book %></td>
        <td><%= link_to t('button.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('button.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('button.new'), new_book_path %>
